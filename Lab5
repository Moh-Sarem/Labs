# Importing required libraries.
import pandas as pd
import numpy as np
import seaborn as sns #visualisation
import matplotlib.pyplot as plt #visualisation
%matplotlib inline 
sns.set(color_codes=True)

x = np.linspace(0, 10, 100)

fig = plt.figure()
plt.plot(x, np.sin(x), '-')
plt.plot(x, np.cos(x), '--')

from sklearn import datasets
iris= datasets.load_iris()
df= pd.read_csv(iris.filename)
#help(pd.read_csv)
print(iris.filename)
print(iris.feature_names)
df.head()

df_with_filepath=pd.read_csv(r'c:\Users\HP\Anaconda3\lib\site-packages\sklearn\datasets\data\iris.csv')
df_with_filepath.head()

df_with_delimiter=pd.read_csv(r'c:\Users\HP\Anaconda3\lib\site-packages\sklearn\datasets\data\iris.csv', delimiter=',', header= None)
df_with_delimiter.head()

df_with_columns=pd.read_csv(r'c:\Users\HP\Anaconda3\lib\site-packages\sklearn\datasets\data\iris.csv', delimiter=',', header= 0, names= ['sepal length (cm)', 'sepal width (cm)', 'petal length (cm)', 'petal width (cm)', 'Variety'])
df_with_columns.head()

print(df_with_columns.info())

print(df_with_columns.shape)
print(df_with_columns["Variety"].value_counts())
df_with_columns["Variety"].hist()

print(df_with_columns.shape)
print(df_with_columns.columns)

print(df_with_columns["Variety"].value_counts())

print(df_with_columns.describe())

for ojha, feature in enumerate(list(df_with_columns.columns)[:-1]):
    fg = sns.FacetGrid(df_with_columns, hue='Variety', height=5)
    fg.map(sns.distplot, feature).add_legend()
    plt.show()
    
sns.boxplot(x='Variety',y='petal length (cm)', data=df_with_columns) 
plt.show()

sns.violinplot(x='Variety',y='petal length (cm)', data=df_with_columns, size=20)
plt.show()

df_with_columns.plot(kind='scatter',x='sepal length (cm)',y='sepal width (cm)', c= 'g')
plt.show()

sns.set_style("whitegrid");
sns.FacetGrid(df_with_columns, hue="Variety", height=10) \
   .map(plt.scatter, "sepal length (cm)", "sepal width (cm)") \
   .add_legend()
plt.show()

sns.set_style("whitegrid");
sns.pairplot(df_with_columns,vars = iris.feature_names, hue = 'Variety', diag_kind = 'kde', 
             plot_kws = {'alpha': 0.6, 's': 80, 'edgecolor': 'k'}, size = 2) 
plt.show()

